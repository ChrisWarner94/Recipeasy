<div class="simple-calendar">
  <div class="d-flex align-items-center">
    <div class="calendar-heading my-2">
      <%= link_to t('simple_calendar.previous', default: '<'), calendar.url_for_previous_view, class: 'btn btn-outline nav-styling d-flex' %>
      <span class="calendar-title btn btn-primary month-styling"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
      <%= link_to t('simple_calendar.next', default: '>'), calendar.url_for_next_view, class: 'btn btn-outline-primary nav-styling d-flex' %>
      <div class="calendar-key">
        <div class="breakfast-key">
          <i class="fa-solid fa-square key-square breakfast"></i>
          <i>Breakfast</i>
        </div>
        <div class="lunch-key">
          <i class="fa-solid fa-square key-square lunch"></i>
          <i>Lunch</i>
        </div>
        <div class="dinner-key">
          <i class="fa-solid fa-square key-square dinner"></i>
          <i>Dinner</i>
        </div>
        <div class="other-key">
          <i class="fa-solid fa-square key-square other"></i>
          <i>Other</i>
        </div>
      </div>
    </div>
  </div>
  <table class="table table-striped simple-calendar">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% date_range.each_slice(7) do |dates| %>
        <tr>
          <% dates.each do |date| %>
            <%= content_tag :td, class: calendar.td_classes_for(date) do %>
              <% passed_block.call date.day, sorted_events.fetch(date, []) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
